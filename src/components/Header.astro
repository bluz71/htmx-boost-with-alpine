<header
  x-data="{ mobileNavOpen: false }"
  id="page-header"
  class="sticky top-0 z-50 flex flex-none items-center border-b border-b-gray-800 bg-gray-900 py-4"
>
  <!-- Main Header Content -->
  <div class="container mx-auto flex items-center justify-between px-4">
    <!-- Left Section -->
    <div class="flex items-center">
      <!-- Logo -->
      <a
        href="/"
        class="group inline-flex items-center gap-2 text-lg font-bold tracking-wide text-gray-100 hover:text-gray-300"
      >
        <span>Home</span>
      </a>
    </div>

    <!-- Right Section -->
    <div class="flex items-center">
      <!-- Mobile Navigation Toggle -->
      <div>
        <button
          x-on:click="mobileNavOpen = true"
          type="button"
          class="inline-flex items-center justify-center gap-2 rounded-lg border border-gray-700 bg-transparent px-3 py-2 text-sm font-semibold leading-5 text-gray-300 hover:border-gray-600 hover:text-gray-200"
          aria-controls="tkMobileNav"
        >
          <svg
            class="hi-mini hi-bars-3 inline-block size-5"
            xmlns="http://www.w3.org/2000/svg"
            viewBox="0 0 20 20"
            fill="currentColor"
            aria-hidden="true"
          >
            <path
              fill-rule="evenodd"
              d="M2 4.75A.75.75 0 012.75 4h14.5a.75.75 0 010 1.5H2.75A.75.75 0 012 4.75zM2 10a.75.75 0 01.75-.75h14.5a.75.75 0 010 1.5H2.75A.75.75 0 012 10zm0 5.25a.75.75 0 01.75-.75h14.5a.75.75 0 010 1.5H2.75a.75.75 0 01-.75-.75z"
              clip-rule="evenodd"
            />
          </svg>
        </button>
      </div>
    </div>
  </div>

  <!-- Navigation Menu -->
  <!-- Add default hidden state -->
  <nav
    x-cloak
    x-show="mobileNavOpen"
    x-transition:enter="transition ease-out duration-200"
    x-transition:enter-start="opacity-50 translate-x-full"
    x-transition:enter-end="opacity-100 translate-x-0"
    x-transition:leave="transition ease-in duration-150"
    x-transition:leave-start="opacity-100 translate-x-0"
    x-transition:leave-end="opacity-50 translate-x-full"
    id="tkMobileNav"
    class="fixed bottom-0 right-0 top-0 z-50 w-72 overflow-auto bg-gray-800/95 shadow-lg"
    tabindex="-1"
    aria-labelledby="tkMobileNavLabel"
    x-bind:aria-modal="mobileNavOpen ? 'true' : null"
    x-bind:role="mobileNavOpen ? 'dialog' : null"
  >
    <div class="flex items-center justify-between p-6">
      <!-- Logo -->
      <a
        id="tkMobileNavLabel"
        href="/"
        class="group inline-flex items-center gap-2 text-lg font-bold tracking-wide text-gray-100 hover:text-gray-300"
      >
        <span>Home</span>
      </a>

      <!-- Close Button -->
      <button
        x-on:click="mobileNavOpen = false"
        type="button"
        class="inline-flex items-center justify-center gap-2 rounded-lg border border-gray-700 bg-gray-800 px-3 py-2 text-sm font-semibold leading-5 text-gray-300 hover:border-gray-600 hover:text-gray-200"
      >
        <svg
          class="hi-mini hi-x-mark -mx-0.5 inline-block size-5"
          xmlns="http://www.w3.org/2000/svg"
          viewBox="0 0 20 20"
          fill="currentColor"
          aria-hidden="true"
        >
          <path
            d="M6.28 5.22a.75.75 0 00-1.06 1.06L8.94 10l-3.72 3.72a.75.75 0 101.06 1.06L10 11.06l3.72 3.72a.75.75 0 101.06-1.06L11.06 10l3.72-3.72a.75.75 0 00-1.06-1.06L10 8.94 6.28 5.22z"
          />
        </svg>
      </button>
    </div>
    <div class="h-px bg-gray-700/75"></div>
    <nav class="flex flex-col gap-2 px-6 py-5">
      <a
        href="/about"
        class="py-1 text-sm font-semibold text-gray-100 hover:text-blue-400"
      >
        <span>About</span>
      </a>
      <a
        href="/details"
        class="py-1 text-sm font-semibold text-gray-100 hover:text-blue-400"
      >
        <span>Details</span>
      </a>
    </nav>
    <div class="h-px bg-gray-700/75"></div>
    <div class="flex flex-col gap-2 p-6">
      <a
        href="javascript:void(0)"
        class="inline-flex items-center justify-center gap-2 rounded-lg border border-blue-700 bg-blue-700 px-3 py-2 text-sm font-semibold leading-5 text-white hover:border-blue-600 hover:bg-blue-600 hover:text-white focus:ring focus:ring-blue-400/90"
      >
        <span>Log in</span>
        <svg
          class="hi-mini hi-arrow-right inline-block size-5 opacity-50"
          xmlns="http://www.w3.org/2000/svg"
          viewBox="0 0 20 20"
          fill="currentColor"
          aria-hidden="true"
        >
          <path
            fill-rule="evenodd"
            d="M3 10a.75.75 0 01.75-.75h10.638L10.23 5.29a.75.75 0 111.04-1.08l5.5 5.25a.75.75 0 010 1.08l-5.5 5.25a.75.75 0 11-1.04-1.08l4.158-3.96H3.75A.75.75 0 013 10z"
            clip-rule="evenodd"
          />
        </svg>
      </a>
    </div>
  </nav>

  <!-- Navigation Backdrop -->
</header>

<style>
  [x-cloak] { display: none !important; }
</style>

